<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_height="wrap_content">

    <!--
         -->
    <android.support.v7.widget.CardView
        android:id="@+id/CardView"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:columnCount="2"
            android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="left">

            <ImageButton
                android:id="@+id/imageViewAvatarVK"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:background="@color/Black" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/pbUserListItem" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxVIP"
                android:layout_width="wrap_content"
                android:text="@string/str_checkbox_text"
                android:textSize="6pt"
                android:focusable="false"
                android:paddingRight="5dp"
                android:focusableInTouchMode="false"
                android:textColor="@color/vk_black"
                android:layout_height="wrap_content"
                app:buttonTint="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/tvBdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/tvTimeToBdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="@color/Black" />

        </LinearLayout>

        </GridLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>