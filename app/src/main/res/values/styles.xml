    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="AppDefault" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>

        <item name="android:buttonStyle">@style/App_BtnStyle</item>

    </style>

    <style name="App_BtnStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:height">100dip</item>
    </style>



    <style name="DialogMin" parent="Base.Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogLargeNoActionBar" parent="Base.Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="DialogLarge" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="android:windowTitleStyle">@style/dialog_title_style</item>
        </style>
    <style name="dialog_title_style" parent="android:TextAppearance.StatusBar.Title">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="OverlayBtn" parent="Theme.AppCompat.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dark" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/accent_color</item>
        <item name="android:listSeparatorTextViewStyle">@style/MPL_PreferenceListHeader</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme.Light</item>
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:textColorPrimary">@color/text_and_icon_color</item>
        <item name="android:textColorSecondary">@color/accent_color</item>
    </style>

    <style name="AppTheme.ActionBarTheme.Light" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>
