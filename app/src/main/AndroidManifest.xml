<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bogdan.remindme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".application.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppDefault">

        <receiver
            android:name=".util.NotificationPublisher"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".util.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
        <intent-filter>
            <action android:name="com.htc.intent.action.QUICKBOOT_POWERON"/>
            <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
            <action android:name="org.bogdan.remindme.ALARMDIALOG_DELAY" />
            <action android:name="org.bogdan.remindme.CREATE_ALARM" />
            <category android:name="android.intent.category.DEFAULT" />
            <!---->
        </intent-filter>
        </receiver>

        <service
            android:name=".util.NotificationActionService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="org.bogdan.remindme.DISPLAY_NOTIFICATION" />
            </intent-filter>
        </service>

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AlarmDialogActivity"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:showOnLockScreen="true"
            android:theme="@style/DialogMin" />

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity android:name=".activities.AddAlarmActivity"
            android:theme="@style/DialogLarge"></activity>

    </application>

</manifest>